{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es6",
    "lib": ["ES6"],
    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "declarationDir": "./types",
    /* Interop Constraints */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  }
}
